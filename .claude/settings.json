{
  "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": true,
  "statusLine": {
    "type": "command",
    "command": "python3 \"$CLAUDE_PROJECT_DIR/.claude/statusline.sh\""
  },
  "permissions": {
    "allow": [
      "Bash(git :*)",
      "Bash(gh :*)"
    ]
  },
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-compact.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-end.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
