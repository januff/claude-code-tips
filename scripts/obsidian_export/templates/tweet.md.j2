{% endfor %}
likes: {{ tweet.likes }}
views: {{ tweet.views }}
engagement_score: {{ tweet.engagement_score }}
url: "{{ tweet.url }}"
enrichment_complete: {{ 'true' if tweet.enrichment_complete else 'false' }}
has_media: {{ 'true' if tweet.media else 'false' }}
has_links: {{ 'true' if tweet.has_links else 'false' }}
has_thread_context: {{ 'true' if tweet.has_thread_context else 'false' }}
